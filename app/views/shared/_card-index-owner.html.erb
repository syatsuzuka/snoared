<div class="cards">
  <% @gears.each do |gear| %>

    <div class="cards-index d-flex flex-column">
      <img src=<%=gear.img_url%>  />
      <div>
        <h2><%= gear.title %></h2>
        <h2>Location: <strong><%= gear.address.split.first.gsub(",","") %></strong></h2>
        <p><%= gear.description.split.first(29).join(" ") + "..." %></p>
        <h2 class="mt-auto price"><%="Â¥#{gear.price.to_i} /day" %></h2>
      </div>

      <div>
        <%= link_to "Edit", edit_gear_path(gear), class: "btn btn-danger text-white" %>
        <%= link_to "Review Booking", review_gear_bookings_path(gear), class: "btn btn-danger text-white" %>
      </div>
    </div>
  <% end %>
</div>
